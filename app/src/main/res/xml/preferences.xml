<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Player 1">

        <SwitchPreference
            android:key="settings_player1_random"
            android:title="Random" />
        <PreferenceCategory
            android:key="settings_player1_choice">

            <CheckBoxPreference
                android:key="Player1_is_X"
                android:title="Player 1 is X" />
            <CheckBoxPreference
                android:key="Player1_is_O"
                android:title="Player 1 is O" />
        </PreferenceCategory>
    </PreferenceCategory>
    <PreferenceCategory android:title="Player 2">

        <SwitchPreference
            android:key="settings_player2_choice"
            android:title="Computer" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Difficulty"
        android:key="difficulty_choice">

        <CheckBoxPreference
            android:key="check_box_easy"
            android:title="Easy" />
        <CheckBoxPreference
            android:key="check_box_hard"
            android:title="Hard" />
    </PreferenceCategory>

</PreferenceScreen>